    <div class="box row">
        <div class="column" id="imaged">
            <img src="../image/workshop.png" style="height:450px;width:400px; margin:70px 70px 70px 70px;">
        </div>
    
    <div class="menu column">
   
    <form>
        <!-- <div class="input-container">
            <label for="doctype">Enter Teacher Id:</label>
